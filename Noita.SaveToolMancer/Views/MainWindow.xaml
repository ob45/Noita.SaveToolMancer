<Window x:Class="Noita.SaveToolMancer.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Noita.SaveToolMancer.Views"
        mc:Ignorable="d"
        Title="SaveToolMancer" Height="256" Width="640">
    <Grid>
        <StackPanel Orientation="Horizontal"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Margin="0">
            <Button x:Name="btn_saveGame" Content="🔼💾 Backup SaveGame"
        Width="154" Height="84"
        Margin="0,0,0,0" Click="btn_saveGame_Click"/>
            <!-- Right margin 30 -->
            <Button x:Name="btn_restoreSave" Content="🔽💾 Restore SaveGame"
        Width="154" Height="84"
        Margin="30,0,0,0" Click="btn_restoreSave_Click"/>
            <!-- Left margin 30 -->
            <Button x:Name="btn_openGameFolder" Content="📂 Open Save Folder"
        Width="154" Height="84"
        Margin="30,0,0,0" Click="btn_openGameFolder_Click"/>
            <!-- Left margin 30 -->
        </StackPanel>
    </Grid>
</Window>
